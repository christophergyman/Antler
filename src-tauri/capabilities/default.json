{
  "$schema": "https://schema.tauri.app/config/2",
  "identifier": "default",
  "description": "Default capability for Antler app",
  "windows": ["main"],
  "permissions": [
    "core:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "run-gh",
          "cmd": "gh",
          "args": true,
          "sidecar": false
        },
        {
          "name": "run-pwd",
          "cmd": "pwd",
          "args": false,
          "sidecar": false
        }
      ]
    },
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "run-gh",
          "cmd": "gh",
          "args": true,
          "sidecar": false
        },
        {
          "name": "run-pwd",
          "cmd": "pwd",
          "args": false,
          "sidecar": false
        }
      ]
    },
    "shell:allow-kill",
    "fs:default",
    {
      "identifier": "fs:allow-exists",
      "allow": [{ "path": "$HOME/**" }]
    },
    {
      "identifier": "fs:allow-read",
      "allow": [{ "path": "$HOME/**" }]
    },
    {
      "identifier": "fs:allow-read-text-file",
      "allow": [{ "path": "$HOME/**" }]
    },
    "fs:allow-appdata-write-recursive",
    "fs:allow-appdata-read-recursive",
    "core:path:default"
  ]
}
